{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./types/global.d.ts"
  ]
}